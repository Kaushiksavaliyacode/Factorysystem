rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * Warning: These rules allow anyone with your project ID to read and write
     * to your database. This is intended for development purposes only.
     * Before deploying to production, implement robust authentication and 
     * authorization logic.
     */
    match /{document=**} {
      allow read, write: if true;
    }
  }
}